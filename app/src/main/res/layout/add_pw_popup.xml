<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/border"
        android:layout_margin="10dp">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@null"
            android:ems="10"
            tools:layout_editor_absoluteX="98dp" android:id="@+id/editwebsite" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp" android:hint="Website"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/editemail"
            android:ems="10"
            tools:layout_editor_absoluteX="98dp"
            app:layout_constraintTop_toBottomOf="@+id/editwebsite" android:layout_marginTop="20dp"
            android:hint="Username"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteX="97dp" android:id="@+id/editpw"
            app:layout_constraintTop_toBottomOf="@+id/editemail" android:layout_marginTop="20dp"
            android:hint="Password"/>
    <Button
            android:text="Add Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addpassword"
            app:layout_constraintTop_toBottomOf="@+id/editpw" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp" app:layout_constraintEnd_toEndOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>